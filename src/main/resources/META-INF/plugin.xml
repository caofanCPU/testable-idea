<idea-plugin require-restart="true">
    <id>org.testable.idea.testable-idea</id>
    <name>Testable-mock helper</name>
    <vendor email="jim.cao.jc@gmail.com" url="https://alibaba.github.io/testable-mock/">testable-mock</vendor>


    <description><![CDATA[
    An simple testable-mock idea plugin.<br>
    It implements method of copy mock signature, navigate to mock method and auto generate test class template
    ]]></description>

<!--
    <change-notes>Initial release of the plugin.</change-notes>
-->

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <psi.referenceContributor implementation="org.testable.idea.ref.MockInvokeReferenceContributor"/>
        <annotator language="JAVA" implementationClass="org.testable.idea.annotator.KeywordAnnotator"/>

        <notificationGroup id="Custom Notification Group" displayType="BALLOON"/>

        <additionalTextAttributes scheme="Default" file="colorSchemes/MyLangDefault.xml"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="org.testable.idea.action.AutoGenerationTestCaseAction" class="org.testable.idea.action.AutoGenerationTestCaseAction" text="生成Testable测试类"
                description="Testable auto generation testcase">
            <add-to-group group-id="MainToolBar" anchor="last"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
            <add-to-group group-id="ChangesViewPopupMenu" anchor="last"/>
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
        <action id="signature" class="org.testable.idea.action.CopyMethodSignatureAction" text="复制方法Mock签名"
                description="copy method signature">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
        <action id="signatureTo" class="org.testable.idea.action.GenerateMethodToTestCaseAction" text="复制方法Mock签名到测试类"
                description="copy method signature to test case">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
